<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.pimenov95r.testgoogleexel.Fragments.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_blackFragment"
            app:destination="@id/blackFragment" />
        <action
            android:id="@+id/action_startFragment_to_whiteFragment"
            app:destination="@id/whiteFragment" />
    </fragment>
    <fragment
        android:id="@+id/blackFragment"
        android:name="com.pimenov95r.testgoogleexel.Fragments.BlackFragment"
        android:label="fragment_black"
        tools:layout="@layout/fragment_black" />
    <fragment
        android:id="@+id/whiteFragment"
        android:name="com.pimenov95r.testgoogleexel.Fragments.WhiteFragment"
        android:label="fragment_white"
        tools:layout="@layout/fragment_white" />
</navigation>